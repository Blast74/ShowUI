<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:info="clr-namespace:SysInfo;assembly=Computer" >
   <!-- This Template is for ComputerInfo objects -->
   <DataTemplate DataType="{x:Type info:ComputerInfo}">
      <StackPanel>
         <StackPanel Orientation="Horizontal">
            <Label Content="Computer: " /><Label Content="{Binding Hostname}" />
         </StackPanel>
         <StackPanel Orientation="Horizontal">
            <Label Content="Domain: " /><Label Content="{Binding Domain}" />
         </StackPanel>
      </StackPanel>
   </DataTemplate>
</ResourceDictionary>